{
  "name": "matchword",
  "version": "1.0.0",
  "description": "This is a word game like Match3. To create a word or multiple words, move the fragment with the letter",
  "main": "index.js",
  "scripts": {
    "start": "http-server -p 8000 -c-1",
    "compile": "tsc -p .",
    "browserify": "browserify build/main.js -p esmify -o dist/index.js",
    "build": "npm run compile && npm run browserify"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/schibir/MatchWord.git"
  },
  "author": "schibir",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/schibir/MatchWord/issues"
  },
  "homepage": "https://github.com/schibir/MatchWord#readme",
  "devDependencies": {
    "browserify": "^17.0.1",
    "esmify": "^2.1.1",
    "http-server": "^14.1.1",
    "typescript": "^5.7.3"
  }
}
